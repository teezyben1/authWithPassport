                <input type="text" placeholder="Enter your name" name="name"  value="<%= typeof name != 'undefined' ? name : ""%>" required>
                <label for="">username</label>
                <input type="text" placeholder="Enter a username" name="username"  value="<%= typeof username != 'undefined' ? username : ""%>" required>
                <label for="">Email</label>
                <input type="text" placeholder="Enter your Email" name="email" value="<%= typeof email != 'undefined' ? email : ""%>" >
                <label for="">password</label>
                <input type="password" placeholder="Enter your password" name="password"  value="<%= typeof password != 'undefined' ? password : ""%>" required>
                <label for="">confirm password</label>
                <input type="password" placeholder="Enter your password" name="password2"  value="<%= typeof password2 != 'undefined' ? password2 : ""%>" required>
                
            
                <button>signup</button>
    
            </form>
           
